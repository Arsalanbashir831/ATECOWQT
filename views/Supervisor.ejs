                            <option value="100">100 per page</option>
                        </select>
                        <div class="pagination-info" id="reportPaginationInfo">Showing 1-10 of <span id="reportTotalRows">0</span> entries</div>
                        <nav>
                            <ul class="pagination" id="reportPagination">
                                <li class="page-item"><a class="page-link" href="#" id="reportPrev">Previous</a></li>
