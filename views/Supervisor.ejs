    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Pagination class
        class TablePagination {
            constructor(tableId, pageSize = 10) {
                this.tableId = tableId;
                this.tableBody = document.getElementById(tableId + 'TableBody');
                this.pageSize = pageSize;
                this.currentPage = 1;
                this.filteredRows = [];
                this.allRows = Array.from(this.tableBody.getElementsByTagName('tr'));
                this.init();
            }

            init() {
                this.filteredRows = [...this.allRows];
                this.updatePagination();
                this.showCurrentPage();
            }

            filterRows(searchText) {
                this.filteredRows = this.allRows.filter(row => {
                    const rowData = row.textContent.toLowerCase();
                    return rowData.includes(searchText.toLowerCase());
                });
                this.currentPage = 1;
                this.updatePagination();
                this.showCurrentPage();
            }

            showCurrentPage() {
                const startIndex = (this.currentPage - 1) * this.pageSize;
                const endIndex = startIndex + this.pageSize;
                
                this.allRows.forEach((row, index) => {
                    if (this.filteredRows.includes(row)) {
                        const filteredIndex = this.filteredRows.indexOf(row);
                        if (filteredIndex >= startIndex && filteredIndex < endIndex) {
                            row.style.display = 'table-row';
                        } else {
                            row.style.display = 'none';
                        }
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            updatePagination() {
                const totalRows = this.filteredRows.length;
                const totalPages = Math.ceil(totalRows / this.pageSize);
                const startRow = (this.currentPage - 1) * this.pageSize + 1;
                const endRow = Math.min(this.currentPage * this.pageSize, totalRows);

                // Update pagination info
                document.getElementById(this.tableId + 'PaginationInfo').innerHTML = 
                    `Showing ${startRow}-${endRow} of <span id="${this.tableId}TotalRows">${totalRows}</span> entries`;

                // Update pagination buttons
                const prevBtn = document.getElementById(this.tableId + 'Prev');
                const nextBtn = document.getElementById(this.tableId + 'Next');
                
                prevBtn.parentElement.classList.toggle('disabled', this.currentPage === 1);
                nextBtn.parentElement.classList.toggle('disabled', this.currentPage === totalPages);

                // Update page size selector
                const pageSizeSelector = document.getElementById(this.tableId + 'PageSize');
                if (pageSizeSelector) {
                    pageSizeSelector.value = this.pageSize;
                }
            }

            goToPage(page) {
                const totalPages = Math.ceil(this.filteredRows.length / this.pageSize);
                if (page >= 1 && page <= totalPages) {
                    this.currentPage = page;
                    this.showCurrentPage();
                    this.updatePagination();
                }
            }

            changePageSize(newSize) {
                this.pageSize = parseInt(newSize);
                this.currentPage = 1;
                this.updatePagination();
                this.showCurrentPage();
            }
        }

        // Navigation functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize pagination for all tables
            const reportPagination = new TablePagination('report', 10);
            const certificatePagination = new TablePagination('certificate', 10);
            const cardPagination = new TablePagination('card', 10);
            const operatorPagination = new TablePagination('operator', 10);
            const aasiaSteelCardPagination = new TablePagination('aasiaSteelCard', 10);

            // Update dashboard counts
            document.getElementById('certificateCount').textContent = <%= certificateData.length %>;
            document.getElementById('operatorCount').textContent = <%= typeof operatorData !== 'undefined' ? operatorData.length : 0 %>;
            document.getElementById('cardCount').textContent = <%= cardData.length %>;
            document.getElementById('aasiaSteelCardCount').textContent = <%= typeof aasiaSteelCardData !== 'undefined' ? aasiaSteelCardData.length : 0 %>;
            document.getElementById('reportCount').textContent = <%= reportData.length %>;

            // Navigation
            const navLinks = document.querySelectorAll('.nav-link');
            const modules = document.querySelectorAll('.module-page');
            const pageTitle = document.getElementById('pageTitle');

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Remove active class from all links and modules
                    navLinks.forEach(l => l.classList.remove('active'));
                    modules.forEach(m => m.classList.remove('active'));
                    
                    // Add active class to clicked link
                    this.classList.add('active');
                    
                    // Show corresponding module
                    const moduleId = this.getAttribute('data-module');
                    const module = document.getElementById(moduleId);
                    if (module) {
                        module.classList.add('active');
                        
                        // Update page title
                        const titles = {
                            'dashboard': 'Dashboard',
                            'certificates': 'Welder Qualification Certificates',
                            'operators': 'Operator Performance Certificates',
                            'cards': 'Welder Qualification Cards',
                            'aasia-steel-cards': 'Aasia Steel Welder Cards',
                            'reports': 'Testing Reports'
                        };
                        pageTitle.textContent = titles[moduleId] || 'Dashboard';
                    }
                });
            });

            // Search functionality
            const searchInputs = {
                'certificate': certificatePagination,
                'operator': operatorPagination,
                'card': cardPagination,
                'aasiaSteelCard': aasiaSteelCardPagination,
                'report': reportPagination
            };

            Object.keys(searchInputs).forEach(key => {
                const input = document.getElementById(key + 'Search');
                if (input) {
                    input.addEventListener('input', function() {
                        searchInputs[key].filterRows(this.value);
                    });
                }
            });

            // Pagination button event listeners
            const paginationButtons = {
                'report': reportPagination,
                'certificate': certificatePagination,
                'card': cardPagination,
                'operator': operatorPagination,
                'aasiaSteelCard': aasiaSteelCardPagination
            };

            Object.keys(paginationButtons).forEach(key => {
                const prevBtn = document.getElementById(key + 'Prev');
                const nextBtn = document.getElementById(key + 'Next');
                const pageSizeSelector = document.getElementById(key + 'PageSize');

                if (prevBtn) {
                    prevBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        paginationButtons[key].goToPage(paginationButtons[key].currentPage - 1);
                    });
                }

                if (nextBtn) {
                    nextBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        paginationButtons[key].goToPage(paginationButtons[key].currentPage + 1);
                    });
                }

                if (pageSizeSelector) {
                    pageSizeSelector.addEventListener('change', function() {
                        paginationButtons[key].changePageSize(this.value);
                    });
                }
            });
        });
    </script>
