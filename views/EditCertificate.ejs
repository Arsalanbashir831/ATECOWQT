<script>
  function createRowHtml() {
    return `
      <tr class="dynamic-row">
        <td style="text-align: left; border: 1px solid black; padding: 4px; font-size: 12px; position: relative;">
          <input type="text" placeholder="Attribute Name" name="attrKeys" style="width: calc(100% - 30px)"> 
          <div class="control-btn" style="position: absolute; right: 5px; top: 50%; transform: translateY(-50%);" onclick="showRowMenu(this, event)">+</div>
          <div class="dropdown-menu">
            <button type="button" onclick="addRowAt(this, 0)">Add Row Before</button>
            <button type="button" onclick="addRowAt(this, 1)">Add Row After</button>
            <button type="button" class="delete-opt" onclick="deleteRow(this)">Delete Row</button>
          </div>
        </td>
        <td style="text-align: left; border: 1px solid black; padding: 4px; font-size: 12px;"> 
          <input type="text" placeholder="Actual Value" name="attrValues" style="width: 100%">
        </td>
        <td style="text-align: left; border: 1px solid black; padding: 4px; font-size: 12px;" colspan="2"> 
          <input type="text" placeholder="Range Qualified" name="attrRanges" style="width: 100%">
        </td>
      </tr>`;
  }

  function addNewRow() {
    const tbody = document.getElementById("dynamic-tbody");
    const lastRow = document.getElementById("add-attributes-row");
    lastRow.insertAdjacentHTML('beforebegin', createRowHtml());
  }

  function showRowMenu(btn, event) {
    event.stopPropagation();
    hideMenus();
    const menu = btn.nextElementSibling;
    menu.style.display = "block";
    
    // Position menu
    menu.style.top = "100%";
    menu.style.right = "0";
    menu.style.left = "auto";
    
    document.getElementById("click-overlay").style.display = "block";
  }

  function hideMenus() {
    document.querySelectorAll(".dropdown-menu").forEach((el) => (el.style.display = "none"));
    document.getElementById("click-overlay").style.display = "none";
  }

  function addRowAt(btn, offset) {
    const row = btn.closest("tr");
    if (offset === 0) {
      row.insertAdjacentHTML('beforebegin', createRowHtml());
    } else {
      row.insertAdjacentHTML('afterend', createRowHtml());
    }
    hideMenus();
  }

  function deleteRow(btn) {
    if (confirm("Delete this row?")) {
      const row = btn.closest("tr");
      row.remove();
    }
    hideMenus();
  }
</script>


